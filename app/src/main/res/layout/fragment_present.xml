<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PresentFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewOne"
        android:layout_width="400dp"
        android:layout_height="70dp"
        card_view:cardBackgroundColor="@color/card_bg"
        card_view:cardCornerRadius="7dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day"
                    android:text="MON"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/monArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:layout_alignParentRight="true"
                    android:text="7:00 Am"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTwo"
        android:layout_width="400dp"
        android:layout_height="70dp"
        card_view:cardBackgroundColor="@color/card_bg"
        android:layout_below="@+id/cardViewOne"
        card_view:cardCornerRadius="7dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dayTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dayTwo"
                    android:text="TUE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

                <TextView
                    android:id="@+id/tueTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/tueArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tueTime"
                    android:layout_alignParentRight="true"
                    android:text="6:00 Am"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewThree"
        android:layout_width="400dp"
        android:layout_height="70dp"
        card_view:cardBackgroundColor="@color/card_bg"
        android:layout_below="@+id/cardViewTwo"
        card_view:cardCornerRadius="7dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dayThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dayThree"
                    android:text="WED"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

                <TextView
                    android:id="@+id/wedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/wedArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wedTime"
                    android:layout_alignParentRight="true"
                    android:text="8:30 Am"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFour"
        android:layout_width="400dp"
        android:layout_height="70dp"
        card_view:cardBackgroundColor="@color/card_bg"
        android:layout_below="@+id/cardViewThree"
        card_view:cardCornerRadius="7dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dayFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/thur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dayFour"
                    android:text="Thur"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

                <TextView
                    android:id="@+id/thurTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/thurArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thurTime"
                    android:layout_alignParentRight="true"
                    android:text="9:00 Am"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>